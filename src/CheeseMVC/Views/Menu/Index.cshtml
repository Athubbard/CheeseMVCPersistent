@model IEnumerable<CheeseMVC.Models.Menu>

<h2>Menus</h2>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

<ul>
    @foreach (var menu in Model)
    {
        <li>
            <a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a>
        </li>
    }
</ul>

<a asp-controller="CheeseMenu" asp-action="Add">Add</a> | <a asp-controller="Cheese" asp-action="Remove">Remove</a>